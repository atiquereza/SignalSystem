@using SignalSystem.Libs
@using SignalSystemApp.Models.Equipment

@{
    string submitNewMailAction = UtilityLibrary.GetBaseURL() + "Mail/AddNewMail";

    string message = string.Empty;

    if (ViewData["message"] != null)
    {
        message = ViewData["message"].ToString();
    }

    if (message.Trim().Length != 0)
    {
        if (message.Contains("Error"))
        {
            message = "<div class=\"alert alert-dismissible alert-danger\" style=\"color: green;\">" +
                       "<button data-dismiss=\"alert\" class=\"close\" type=\"button\" style=\"padding-right: 10px; color: blue;\">&times;</button>" +
                       message + "</div>";
        }
        else
        {
               message = "<div class=\"alert alert-dismissible alert-success\" style=\"color: black;\">" +
                       "<button data-dismiss=\"alert\" class=\"close\" type=\"button\" style=\"padding-right: 10px; color: blue;\">&times;</button>" +
                       message + "</div>";
        }

    }

    string pendingList = string.Empty;
    string deleteAction = UtilityLibrary.GetBaseURL() + "Equipment/DeleteSingleEquipment";
    string editAction = UtilityLibrary.GetBaseURL() + "Equipment/EditSingleEquipment";
    string addAction = UtilityLibrary.GetBaseURL() + "Equipment/AddEquipment";
    string addTypeAction = UtilityLibrary.GetBaseURL() + "Equipment/AddEquipmentType";

}




<div class="row">
    <div class="col-lg-12">
        @Html.Raw(message)
    </div>
 </div>

<form method="POST" action="@submitNewMailAction">
    <div class="row text-center">
        <h2>Add New Mail</h2>
    </div>

    <div id="table-container-div">
        <div>
        <label for="mailid" class="col-md-2">
            Mail ID:
        </label>
        <div class="col-md-9">
            <input type="text" class="form-control" id="mailid" placeholder="Mail ID" name="mailId">
        </div>
        <div class="col-md-1">
            <i class="fa fa-lock fa-2x"></i>
        </div>
    </div>

    <div>
        <label for="description" class="col-md-2">
            Description:
        </label>
        <div class="col-md-9">
            <textarea class="form-control" id="description" name="mailDescription"></textarea>
        </div>
        <div class="col-md-1">
            <i class="fa fa-lock fa-2x"></i>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-10">
            <button type="submit" class="btn btn-info custom-btn">
                Add
            </button>
        </div>
    </div>
    </div>
</form>

